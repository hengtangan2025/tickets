<p id="notice"><%= notice %></p>

<h1>球票列表</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image url1</th>
      <th>Image url2</th>
      <th>Time</th>
      <th>Address</th>
      <th>Spurlus quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td><%= ticket.title %></td>
        <td><%= image_tag(ticket.image_url1, :class => 'list_image') %></td>
        <td><%= image_tag(ticket.image_url2, :class => 'list_image') %></td>
        <td><%= ticket.time %></td>
        <td><%= ticket.address %></td>
        <td><%= ticket.spurlus_quantity %></td>
        <td><%= ticket.price %></td>
        <td><%= link_to '查看', ticket %></td>
        <td><%= link_to '修改信息', edit_ticket_path(ticket) %></td>
        <td><%= link_to '删除', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

