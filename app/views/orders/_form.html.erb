<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :姓名 %><br>
    <%= f.text_field :name, :size => 20 %>
  </div>
  <div class="field">
    <%= f.label :联系地址 %><br>
    <%= f.text_field :sfzhm, :size => 20 %>
  </div>
  <div class="field">
    <%= f.label :手机号码 %><br>
    <%= f.text_field :tel, :size => 20 %>
  </div>
  <div class="field">
    <%= f.label :取票方式 %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => '选择取票方式' %>
  </div>
  <%= hidden_field_tag 'order[user_id]',session[:user_id] %>
  <div class="actions">
    <%= f.submit '提交' %>
  </div>
<% end %>
