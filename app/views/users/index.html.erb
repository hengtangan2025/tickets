
<p id="notice"><%= notice %></p>

<h1>用户列表</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>用户<%= user.name %></td>
        <td><%= link_to '查看', user %></td>
        <td><%= link_to '删除', user, method: :delete , data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>